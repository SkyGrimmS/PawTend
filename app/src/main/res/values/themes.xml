<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PawTend" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Theme.PawTend" parent="Base.Theme.PawTend" />


    <style name="BottomNavText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">0sp</item> <!-- бо у нас unlabeled -->
    </style>

    <style name="BottomNavigationViewFixed" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="itemTextAppearanceActive">@style/BottomNavText</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavText</item>
        <item name="android:minHeight">56dp</item>
        <item name="itemBackground">@android:color/transparent</item>
    </style>



</resources>